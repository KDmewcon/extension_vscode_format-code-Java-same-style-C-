{
  "name": "dvt-java-formatter",
  "displayName": "üî∑ DVT Java Formatter",
  "description": "Format Java code with C# style braces - preserves imports and libraries",
  "version": "1.5.0",
  "publisher": "dvt-dev",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Formatters"
  ],
  "keywords": [
    "java",
    "formatter",
    "c#",
    "style",
    "braces",
    "dvt"
  ],
  "activationEvents": [
    "onLanguage:java"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "java",
        "extensions": [".java"]
      }
    ],
    "commands": [
      {
        "command": "dvt.formatJavaWithCSharpStyle",
        "title": "üî∑ DVT: Format Java with C# Style"
      }
    ],
    "keybindings": [
      {
        "command": "dvt.formatJavaWithCSharpStyle",
        "key": "ctrl+shift+alt+f",
        "when": "editorTextFocus && resourceExtname == '.java'"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "dvt.formatJavaWithCSharpStyle",
          "when": "resourceExtname == '.java'",
          "group": "1_modification@1"
        }
      ]
    },
    "configuration": {
      "title": "DVT Java Formatter",
      "properties": {
        "dvt.autoFormatOnCloseBrace": {
          "type": "boolean",
          "default": true,
          "description": "T·ª± ƒë·ªông format code khi g√µ d·∫•u '}'"
        },
        "dvt.indentSize": {
          "type": "number",
          "default": 4,
          "minimum": 1,
          "maximum": 8,
          "description": "S·ªë spaces cho m·ªói m·ª©c indentation"
        },
        "dvt.allmanBraceStyle": {
          "type": "boolean",
          "default": true,
          "description": "S·ª≠ d·ª•ng Allman brace style (d·∫•u ngo·∫∑c nh·ªçn tr√™n d√≤ng ri√™ng)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
