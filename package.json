{
  "name": "dvt-java-formatter",
  "displayName": "Java Formatter Like Style C# DVT-KDMEWCON",
  "description": "Format Java code with C# style braces - preserves imports and libraries",
  "version": "1.9.0",
  "publisher": "JavaFormatterLikeStyleCDVT-KDMEWCON",
  "icon": "avatar_about_me_.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Formatters"
  ],
  "keywords": [
    "java",
    "formatter",
    "c#",
    "style",
    "braces",
    "dvt"
  ],
  "activationEvents": [
    "onLanguage:java"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "java",
        "extensions": [".java"]
      }
    ],
    "commands": [
      {
        "command": "dvt.formatJavaWithCSharpStyle",
        "title": "Java Formatter Like Style C# DVT-KDMEWCON"
      }
    ],
    "keybindings": [
      {
        "command": "dvt.formatJavaWithCSharpStyle",
        "key": "ctrl+shift+alt+f",
        "when": "editorTextFocus && resourceExtname == '.java'"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "dvt.formatJavaWithCSharpStyle",
          "when": "resourceExtname == '.java'",
          "group": "1_modification@1"
        }
      ]
    },
    "configuration": {
      "title": "Java Formatter Like Style C# DVT-KDMEWCON",
      "properties": {
        "dvt.autoFormatOnCloseBrace": {
          "type": "boolean",
          "default": true,
          "description": "Tự động format code khi gõ dấu '}'"
        },
        "dvt.indentSize": {
          "type": "number",
          "default": 4,
          "minimum": 1,
          "maximum": 8,
          "description": "Số spaces cho mỗi mức indentation"
        },
        "dvt.allmanBraceStyle": {
          "type": "boolean",
          "default": true,
          "description": "Sử dụng Allman brace style (dấu ngoặc nhọn trên dòng riêng)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
